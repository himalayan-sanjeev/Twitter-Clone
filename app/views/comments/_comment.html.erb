<% if not comment.hidden %>
    <article class="media", id="comment_<%= comment.id %>">  
     <figure class="image is-64x64">
				<% if comment.user.profile_pic.attached? %>
					<%= image_tag(comment.user.profile_pic) %>
				<% end %>
		</figure>

      <div class="media-content">
        <div class="content">
              <strong><%= comment.user.name %></strong><br />
              <small>@<%= comment.user.username %></small>
              <span> . </span><small><%= comment.created_at.strftime("%B %d %Y, %l:%M%P") %></small>   <hr>            
              <small><%= comment.content %></small><br/>
              <figure class="image">
                <% if comment.images.attached? %>
                  <% comment.images.each do |image| %>
                    <%= image_tag(image, size: '100%') %>
                  <% end %>
                <% end %>
					    </figure>
        </div>        
      </div>

      <div class="card">
            <% if user_signed_in? %>
              <footer class="card-footer">
                  <% if current_user.id == @tweet.user_id  %>  
                      <%= link_to "Hide", hide_tweet_comment_path(@tweet,comment),method: :post, class: "card-footer-item", id:"hide_btn", remote: true %>
                      <%= link_to "Delete", tweet_comment_path(@tweet,comment), method: :delete, class:"card-footer-item" , id:"remove_btn", data: { confirm: "Are you sure you want to delete this comment?"} , remote: true %>
                  <% end %>
                  <% if current_user.id == comment.user_id %>
                      <%= link_to "Edit", edit_tweet_comment_path(@tweet,comment),class:"card-footer-item",id:"edit_btn", remote: false %>  
                  <% end %>
              </footer>
            <% end %>
      </div>
    </article>
<% end %>

<% @tweet.comments.each do |comment| %>
    <article class="media">
      <figure class="media-left">
        <p class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/128x128.png">
        </p>
      </figure>
      <div class="media-content">
        <div class="content">
              <strong><%= comment.user.name %></strong><br />
              <small>@<%= comment.user.username %></small>
              <span> . </span><small><%= comment.created_at.strftime("%B %d %Y, %l:%M%P") %></small>   <hr>            
              <small><%= comment.content %></small><br/>
        </div>        
      </div>
      <% if user_signed_in? %> 
        <% if current_user.id == @tweet.user_id  %>  
              <%= button_to "Hide", tweet_path(@tweet), class: "hide_btn", remote: true %>
              <%= button_to "Remove", tweet_path(@tweet.comments), method: :delete, class:"remove_btn" ,data: { confirm: "Are you sure you want to delete this comment?"} , remote: true %>
         <% end %>

            <% if current_user.id == comment.user_id %>
                <%= button_to "Edit", edit_tweet_comment_path(@tweet.comments), remote: true %>
            <% end %>
      <% end %>
    </article>
<% end %>
<div class="column ">
  <div class="box">
      <%= simple_form_for([@tweet,@tweet.comments.build], remote: true)  do |f| %>
      <%= f.error_notification %>
    <div class="field"> 
        <div class="control">
          <%= f.input :content, label: "Write a Comment.. ", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new tweet...", autofocus: true %>
        </div>
      </div>
      <%= f.button :submit, class: "button is-info" %>
      <% end %>

  </div>
</div>

      

<div class="column ">
  <div class="box">
      <%= simple_form_for(@tweet) do |f| %>
      <%= f.error_notification %>
      <div class="field">
        <div class="control">
          <%= f.input :tweet, label: "Compose a Tweet ", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new tweet...", autofocus: true %>
        </div>
      </div>
      <div class="field">
			<div class="control">
      	<%= f.label :Attach_Files %>
				<%= f.file_field :images,label: "Attach Files", required: false, accept: 'image/png, image/gif, image/jpeg, video/mp4',multiple: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>		
			</div>
		</div>
      
      <%= f.button :submit, class: "button is-info" %>
      <% end %> 
  </div>
</div>
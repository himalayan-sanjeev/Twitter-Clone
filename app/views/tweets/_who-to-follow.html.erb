<div class="column">
	<nav class="panel">
		<p class="panel-heading">Who to Follow</p>

		<% @users.each do | user | %>
		  <div class="panel-block">
			<article class="media">
				<div class="media-left">
					<figure class="image is-128x128">
					  <% if user.profile_pic.attached? %>
						  <%= image_tag(user.profile_pic) %>
					  <% end %>
					</figure>
				</div>
				<div class="media-content">
					<div class="content">
						<p>
							<strong><%= link_to user.name, user_path(user) %></strong><br />
							<small>@<%= user.username %> </small>
							<%= link_to "Follow", user_relationships_path(user),method: :post, class: "button is-info" unless @relation.present? %>
							<%= link_to "Unfollow", relationship_path(@relation.id),method: :delete, class: "button is-info" if @relation.present? %>

						</p>
					</div>	
				</div>
			</article>
		  </div>
		<% end %>
	</nav>
		<div class="is-pulled-right is-success">
			<%= link_to "See more people to follow", users_path, class: "button is-link" %>
		</div>
</div>